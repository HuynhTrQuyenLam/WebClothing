
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Category</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/CategoryManage/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Category</a>
            <span class="breadcrumb-item active">Tạo mới Category</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin</a>
        </li>
    </ul>
</div>
<div class="tab-content m-t-15">
    <div class="tab-pane fade show active" id="product-edit-basic">
        <div class="card">
            @using (Html.BeginForm("Add", "CategoryManage", FormMethod.Post))
            {
                <div class="card-body">
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control" placeholder="Category" name="Name">
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/CategoryManage/" class="btn btn-light-secondary">Trở lại</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div>
    </div>
</div>




