
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    List<WebClothing.Models.Category> categoryies = ViewBag.CategoryList as List<WebClothing.Models.Category>;
}

<div class="page-header">
    <h2 class="header-title">Product</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/Product/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Product</a>
            <span class="breadcrumb-item active">Tạo mới Product</span>
        </nav>
    </div>
</div>
@using (Html.BeginForm("Add", "ProductManage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <form>
        <div class="page-header no-gutters has-tab">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin</a>
                </li>
            </ul>
        </div>
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active" id="product-edit-basic">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="inputState">Tên sản phẩm</label>
                            <input type="text" class="form-control" required name="Name">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="inputState">Danh mục</label>
                            <select name="CategoryID" class="form-control">
                                    @foreach (var item in categoryies)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="inputState">Giá sản phẩm</label>
                            <input type="text" class="form-control" required name="Price">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="inputState">Số lượng</label>
                            <input type="text" class="form-control" required name="Quantity">
                        </div>
                        @*<div class="form-group">
                            <label class="font-weight-semibold">Trạng thái</label>
                            <select class="custom-select" name="Status">
                                <option value="0">Có sẵn</option>
                                <option value="1">Hết hàng</option>
                            </select>
                        </div>*@
                    <div class="form-group">
                        <label class="font-weight-semibold" for="inputState">Mô tả</label>
                        <textarea class="form-control" id="mytextarea" required name="Description"> </textarea>
                    </div>
                    <div class="form-group">
                        <label>Chọn hình 1 (*)</label>
                        <input type="file" class="form-control" name="ImageUpload" required>
                    </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-12 ">
                            <a href="/ProductManage/" class="btn btn-default">Trở lại</a>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </form>
}



