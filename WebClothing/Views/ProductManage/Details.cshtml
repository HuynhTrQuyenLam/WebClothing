@model WebClothing.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    List<WebClothing.Models.Category> categories = ViewBag.CategoryList as List<WebClothing.Models.Category>;
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="alert alert-primary">
                        <i class="bi bi-star"></i> @Model.Name
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Edit", "ProductManage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        <input type="text" name="ID" value="@Model.ID" hidden />
                        <div class="card-body">
                            <span class="badge bg-success">@ViewBag.Message</span>
                            <div class="form-group">
                                <label>Tên</label>
                                <input type="text" class="form-control" value="@Model.Name" required name="Name">
                            </div>
                            <div class="form-group">
                                <label>Danh mục</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        if (item.ID == Model.CategoryID)
                                        {
                                            <option value="@item.ID" selected>@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Đơn giá</label>
                                <input type="text" class="form-control" value="@Model.Price.Value" required name="Price">
                            </div>
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input type="text" class="form-control" value="@Model.Quantity" required name="Quantity">
                            </div>
                            @*<div class="form-group">
                                <label>Phù hợp với: </label>
                                <input type="text" class="form-control" value="@Model.Type" required name="Type">
                            </div>
                            <div class="form-group">
                                <label>Lượt xem</label>
                                <input type="text" class="form-control" value="@Model.ViewCount" required name="ViewCount" disabled>
                            </div>
                            <div class="form-group">
                                <label>Đã bán</label>
                                <input type="text" class="form-control" value="@Model.PurchasedCount" required name="PurchasedCount" disabled>
                            </div>*@
                            <div class="form-group">
                                <label>Hình 1</label>
                                <img src="~/Content/images/@Model.Image1" alt="Alternate Text" style="width:15%;height:15%;border: solid 1px gray" />
                                @*<label>Hình 2</label>
                                <img src="~/Content/images/@Model.Image2" alt="Alternate Text" style="width:15%;height:15%;border: solid 1px gray" />
                                <label>Hình 3</label>
                                <img src="~/Content/images/@Model.Image3" alt="Alternate Text" style="width:15%;height:15%;border: solid 1px gray" />*@
                            </div>
                            <div class="form-group">
                                <label>Chọn hình 1 mới</label>
                                <input type="file" class="form-control" name="ImageUpload">
                            </div>
                            @*<div class="form-group">
                                <label>Chọn hình 2 mới</label>
                                <input type="file" class="form-control" name="ImageUpload">
                            </div>
                            <div class="form-group">
                                <label>Chọn hình 3 mới</label>
                                <input type="file" class="form-control" name="ImageUpload">
                            </div>*@
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" required id="mytextarea" name="Description">@Model.Description</textarea>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a href="/ProductManage/" class="btn btn-light-secondary">Trở lại</a>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


